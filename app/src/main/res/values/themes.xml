<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_sky_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_sky_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TextInputLayout -->
    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
    </style>

    <!-- RecyclerContainerStyle -->
    <style name="rv_main_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_10dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_10dp</item>
        <item name="android:layout_marginTop">@dimen/margin_4dp</item>
        <item name="android:paddingTop">@dimen/margin_8dp</item>
        <item name="android:paddingBottom">@dimen/margin_8dp</item>
        <item name="android:backgroundTint">@color/rv_main_container_color_selector</item>
        <item name="android:background">@drawable/main_rv_item_shape</item>
    </style>

    <style name="Theme.Bin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>